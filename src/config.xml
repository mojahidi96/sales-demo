<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cws.pg.app.dev.uit.hal.synchronoss1" version="0.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Sales Demo 4.2</name>
    <description>
        The UIT App is designed and built by Synchronoss
    </description>
    <author href="https://synchronoss.com/">Synchronoss</author>

    <preference name="phonegap-version" value="cli-6.5.0" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="default" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#262626" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <plugin name="cordova-plugin-ios-camera-permissions" spec="~1.2.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="This app needs camera access" />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="This app needs microphone access" />
        <variable name="PHOTOLIBRARY_ADD_USAGE_DESCRIPTION" value="This app needs write-access to photo library" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="This app needs read/write-access photo library access" />
    </plugin>
    <plugin name="cordova-plugin-camera" source="npm" spec="~4.0.2">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Capture Images" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Save Photos" />
    </plugin>
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~3.0.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Capture Images" />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="Record Audio" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Save Photos" />
    </plugin>
    <plugin name="cordova-plugin-device" source="npm" spec="~2.0.1" />
    <plugin name="cordova-plugin-media" source="npm" spec="~5.0.2" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~5.0.2" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.4.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.3.3" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~8.0.1" >
        <param name = "CAMERA_USAGE_DESCRIPTION" value = "To scan barcode" />
    </plugin>
    <plugin spec="https://github.com/TheMattRay/cordova-plugin-wkwebviewxhrfix" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="~1.1.4" />
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>

    <platform name="ios">
        <icon height="57" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1.png" width="57" />
        <icon height="114" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1@2x.png" width="114" />
        <icon height="40" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-40.png" width="40" />
        <icon height="80" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-40@2x.png" width="80" />
        <icon height="50" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-50.png" width="50" />
        <icon height="100" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-60.png" width="60" />
        <icon height="120" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-60@3x.png" width="180" />
        <icon height="72" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-72.png" width="72" />
        <icon height="144" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-72@2x.png" width="144" />
        <icon height="76" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-76.png" width="76" />
        <icon height="152" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-76@2x.png" width="152" />
        <icon height="29" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-small.png" width="29" />
        <icon height="58" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-small@2x.png" width="58" />
        <icon height="87" platform="ios" src="www/assets/phonegap-img/icon/ios/mno-logo1-small@3x.png" width="87" />
        <splash height="1136" platform="ios" src="www/assets/phonegap-img/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" platform="ios" src="www/assets/phonegap-img/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" platform="ios" src="www/assets/phonegap-img/screen/ios/Default-736h.png" width="1242" />
        <splash height="1242" platform="ios" src="www/assets/phonegap-img/screen/ios/mno-Landscape-736h.png" width="2208" />
        <splash height="1536" platform="ios" src="www/assets/phonegap-img/screen/ios/mno-Landscape@2x~ipad.png" width="2048" />
        <splash height="768" platform="ios" src="www/assets/phonegap-img/screen/ios/mno-Landscape~ipad.png" width="1024" />
        <splash height="2048" platform="ios" src="www/assets/phonegap-img/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" platform="ios" src="www/assets/phonegap-img/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="960" platform="ios" src="www/assets/phonegap-img/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="480" platform="ios" src="www/assets/phonegap-img/screen/ios/Default~iphone.png" width="320" />
    </platform>
    <platform name="android">
     <plugin name="cordova-plugin-barcodescanner" spec="~0.7.4">
            <param name="CAMERA_USAGE_DESCRIPTION" value="To scan barecode" />
            <variable name="ANDROID_SUPPORT_V4_VERSION" value="28.0.0" />
        </plugin>
        <icon  platform="android" src="www/assets/phonegap-img/icon/android/ldpi.png" qualifier="ldpi" />
        <icon  platform="android" src="www/assets/phonegap-img/icon/android/mdpi.png" qualifier="mdpi" />
        <icon  platform="android" src="www/assets/phonegap-img/icon/android/hdpi.png" qualifier="hdpi" />
        <icon  platform="android" src="www/assets/phonegap-img/icon/android/xhdpi.png" qualifier="xhdpi" />
        <icon  platform="android" src="www/assets/phonegap-img/icon/android/xxhdpi.png" qualifier="xxhdpi" />
        <icon  platform="android" src="www/assets/phonegap-img/icon/android/xxxhdpi.png" qualifier="xxxhdpi" />
        
    </platform>
    <access origin="*" allows-arbitrary-loads-for-media="true" allows-arbitrary-loads-in-web-content="true" allows-local-networking="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="file:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
